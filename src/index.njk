---
title: HTTP Status Codes
layout: base
---

<div class="">
  <div class="container w-full lg:w-3/5">
  <div class="flex flex-wrap">
    {% for group,c in codes | groupby("group")%}
    <div class="w-full md:w-1/2 px-4">
        <h2 class="text-2xl py-4" id="{{ group }}">{{ group }}{% if status.group_name %}{{ status.group_name }}{% endif %}</h2>
        <ul class="text-xl list-inside lg:pl-3">
        {% for status in c %}
          <li class="font-light"><a class="hover:text-blue-400 font-numeric-tabular" href="/{{ status.code }}/"><span class="text-blue-600">{{ status.code }}</span> {{ status.title }}</a>{% if status.tag %} <span class="bg-gray-200 rounded p-1 font-light text-lg">{{ status.tag }}</span>{% endif %}</li>
        {% endfor %}
        </ul>
    </div>
    {% endfor %}
  </div>
  </div>
</div>
